@model List<Order>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="table-wrap">
        <div class="category">
            <h2>Orders</h2>
            
        </div>
        <table class="table">
            <thead class="thead-primary">
                <tr>
                    <th>Username</th>
                    <th>Address</th>
                    <th>TotalPrice</th>
                    <th>Date</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Order order in Model)
                {
                    
                        if(order.Status == false){
                            <tr>
                                <td>@order.User.UserName</td>
                                <td>
                                    @order.Country,
                                    @order.Town,
                                    @order.StreetAddress,
                                    @order.ApartmentAddress,
                                </td>
                                <td>@order.TotalPrice</td>
                                <td>@order.CreatedAt.ToShortDateString()</td>

                                <td>
                                <div class="div">
                                    <a asp-area="admin" asp-controller="order" asp-action="delete" asp-route-id="@order.Id"><i class="fa-solid fa-trash"></i></a>
                                    <a asp-area="admin" asp-controller="order" asp-action="success" asp-route-id="@order.Id">
                                        <i class="fa-solid fa-truck"></i>

                                    </a>

                                </div>
                                </td>
                            </tr>
                        }
                       

                        
               }
                    
                   

                
            </tbody>
        </table>
    </div>
</div>


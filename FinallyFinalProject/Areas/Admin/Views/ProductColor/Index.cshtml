@model List<ProductColor>
@{
    ViewData["Title"] = "Index";
}


<div class="main-panel">
    <div class="table-wrap">
        <div class="category">
            <h2>Products Count</h2>
            

        </div>
        <table class="table">
            <thead class="thead-primary">
                <tr>
                    <th>Product Image</th>
                    <th>Name</th>
                    <th>Color</th>
                    <th>ProductCount</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>

                @foreach (ProductColor product in Model.OrderByDescending(p=>p.Id))
                {
                    <tr>
                        <td><img style="width:170px; height:170px; object-fit:contain;" src="~/BrandNewImages/@product.Product.ProductImages.FirstOrDefault(p=>p.IsMain==true)?.Name"> </td>
                        <td>@product.Product.Model</td>
                        <td>@product.Color.ColorName</td>
                        <td>@product.ProductCount</td>
                        



                        <td>
                            <div class="div">
                                <a asp-area="admin" asp-controller="productcolor" asp-action="delete" asp-route-id="@product.Id"><i class="fa-solid fa-trash"></i></a>

                                <a asp-area="admin" asp-controller="productcolor" asp-action="update" asp-route-id="@product.Id"><i class="fa-solid fa-pen"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>



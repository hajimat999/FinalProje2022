@model Order
@inject FinallyFinalProject.Services.LayoutService layoutService
<section class="header-title">
    <h1>Checkout</h1>
    <ul>
        <li><a href="index.html">Home</a></li>
        <li><span>/</span></li>
        <li>Checkout</li>
    </ul>

</section>
<div class="mdi-account-alert alert-danger" style="color:red; text-align:center; margin-top:50px; margin-bottom:50px; font-size:20px;" asp-validation-summary="ModelOnly"></div>
@if(layoutService.Getbasket().TotalPrice != 0)
{
    <div class="twenty">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3>Billing Details</h3>
                    <form method="post">
                        <label for="">Country*</label>
                        <input asp-for="Country" class="rihanna" placeholder="Country" />
                        <span class="text-danger" asp-validation-for="StreetAddress"></span> <br />

                        <label for="">Address*</label>
                        <input class="rihanna" asp-for="StreetAddress" placeholder="Street Address">
                        <span class="text-danger" asp-validation-for="StreetAddress"></span> <br />

                        <input class="rihanna" asp-for="ApartmentAddress" placeholder="Apartment Address">
                        <span class="text-danger" asp-validation-for="ApartmentAddress"></span> <br />

                        <label for="">Town / City*</label>
                        <input asp-for="Town" placeholder="Town / City">
                        <span class="text-danger" asp-validation-for="Town"></span> <br />

                        <label for="">Phone*</label>
                        <input asp-for="Phone" placeholder="Phone Number">
                        <span class="text-danger" asp-validation-for="Phone"></span> <br />
                        <div class="vvv">
                            <button type="submit">Place Order</button>
                        </div>
                    </form>
                </div>
                <div class="col-6 qaz">
                    <h3>Order Total</h3>
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                        @foreach (BasketItem basketItem in layoutService.Getbasket().BasketItems)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@basketItem.Product.Model</p>
                                <p class="ppp">$@basketItem.Price</p>
                            </div>

                        }

                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>
                                $
                                @layoutService.Getbasket().TotalPrice

                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


